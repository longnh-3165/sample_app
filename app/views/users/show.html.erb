<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= @user.email %>
        <% if can_delete_user? @user %>
        <%= link_to t(".delete"), @user, method: :delete, data: {confirm: t(".delete_confirmation")} %>
        <% end %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @microposts.any? %>
      <h3>Microposts (<%= @microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%== pagy_bootstrap_nav @pagy %>
    <% else %>
      <h3><%= t ".no_micropost" %></h3>
    <% end %>
  </div>
</div>
